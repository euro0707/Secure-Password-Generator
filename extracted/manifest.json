{
  "manifest_version": 3,
  "name": "Secure Password Generator",
  "version": "1.0",
  "description": "シンプルで安全なパスワード生成拡張機能",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": ["storage", "clipboardWrite"],
  "icons": {
    "32": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
